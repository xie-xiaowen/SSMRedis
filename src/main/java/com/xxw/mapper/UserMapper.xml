<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserMapper">

    <!-- 缓存类配置 -->
    <cache type="com.xxw.util.RedisCache" />

    <!-- 根据用户ID查询用户信息 -->
    <select id="findUserList" resultType="User" parameterType="String" useCache="true">
        SELECT
          ID, NAME, AGE, GENDER, PHONE, ADDRESS
        FROM
          USER
        WHERE
          1 = 1
          <if test="_parameter != null and '' != _parameter">
              AND ID = ${_parameter}
          </if>
    </select>

    <!-- 查询全部用户名，或根据用户ID查询用户名 -->
    <select id="findUserNameAll" resultType="String">
        SELECT NAME FROM  USER
    </select>

</mapper>